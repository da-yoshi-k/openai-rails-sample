<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="page w-8 h-8 leading-8 text-center mx-1 current text-red-500">
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel} %>
  </span>
<% else %>
  <span class="page w-8 h-8 leading-8 rounded-md text-center mx-1 hover:bg-neutral-100 transition-all duration-300 ease-out">
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel, class: "block"} %>
  </span>
<% end %>
