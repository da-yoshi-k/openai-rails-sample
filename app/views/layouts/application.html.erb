    </script>
  </head>

  <body>
    <main>
      <div class="flex justify-center">
        <div class="md:max-w-xl">
          <%= image_tag 'talk-deck.webp' %>
        </div>
      </div>
      <div class="container mx-auto mt-10 px-5 flex flex-col items-center">
        <%= yield %>
      </div>
